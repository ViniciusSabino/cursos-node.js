<!DOCTYPE html>
<html lang="pt-br">

<head>
	<meta charset="utf-8" />
	<title>Formulário de cadastro de Notícia</title>
	<!-- css -->
	<link rel="stylesheet" href="/css/bootstrap.css" crossorigin="anonymous">
	<!-- jquery -->
	<script src="js/jquery-2.2.1"></script>
	<!-- favicon -->
	<link rel="shortcut icon" href="images/favicon.ico" />
</head>
<body>
	<nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
		<div class="col">
			<img src="images/logo.png"/>
		</div>
		<div class="col">
			<a href="/" class="text-white"><button style="float: right" class="btn btn-primary">Home</button></a>
		</div>
	</nav>
	<div class="container-fluid">
		<div class="row" style="margin-top: 10px;">
		</div>
		<br />
		<% if(validacao.length > 0) { %>
			<div class="row">
				<div class="col col-md-6 bg-danger" style="margin:auto;">
					<h6 class="text-white" style="margin-top:10px;">Atenção:</h6>
					<ul style="margin-top:6px;">
						<% for(var i = 0; i < validacao.length; i++) { %>
							<li class="text-white" style="font-size: 14px;"><%= validacao[i].msg %></li>
						<% } %>
					</ul>
				</div>
			</div>
		<% } %>
		<div class="row">
			<div class="col col-md-6 bg-secondary" style="margin:auto;">
				<form action="/noticias/salvar" method="POST">
				</br>
					<div class="form-group">
						<label for="" class="col-sm-3 col-form-label">Titulo</label>
						<div class="col-md-12">
							<input type="text" class="form-control" id="titulo" name="titulo" value="<%=noticia.titulo%>" placeholder="Titulo da Noticia">
						</div>
					</div>
					<div class="form-group">
						<label for="" class="col-sm-2 col-form-label">Resumo</label>
						<div class="col-md-12">
							<input type="text" class="form-control" name="resumo" id="resumo" value="<%=noticia.resumo%>" placeholder="Resumo da Noticia">
						</div>
					</div>
					<div class="form-group">
						<label for="" class="col-sm-2 col-form-label">Autor</label>
						<div class="col-md-12">
							<input type="text" class="form-control" name="autor" id="autor" value="<%=noticia.autor%>" placeholder="Nome do Autor">
						</div>
					</div>
					<div class="form-group">
						<label for="" class="col-sm-2 col-form-label">Data</label>
						<div class="col-md-12">
							<input type="date" name="data_noticia" class="form-control" id="data_noticia" value="<%=noticia.data_noticia%>" placeholder="Data da Noticia">
						</div>
					</div>
					<div class="form-group">
						<label for="" class="col-sm-2 col-form-label">Noticia</label>
						<div class="col-md-12">
							<textarea name="noticia" class="form-control" id="noticia" rows="3"><%=noticia.noticia%></textarea>
						</div>
					</div>
					<div class="form-group">
						<div class="col-md-12">
							<input class="btn btn-primary" type="submit" value="Enviar" />
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</br>
</body>
</html>